                                            </table>
                                        </div> *@
                                
                                @* <Pagination Module="@Module" Suppliers="@Suppliers" TotalCount="@TotalCount"/> *@
                                }
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </form>
    </div>

    <form class="pt-3">
        <div class="form-group">
            <div class="row mt-3">
                <div class="col-lg-12">
                    <TimelineAndComment PageName="@Module"></TimelineAndComment>
                </div>
            </div>
        </div>
    </form>

