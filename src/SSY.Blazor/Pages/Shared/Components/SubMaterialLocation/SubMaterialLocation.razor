<EditForm Model="SubMaterialModel.Location" @ref="editForm">
    <DataAnnotationsValidator />

    <div class="border rounded-lg p-4 shadow-sm inventory__second bg-white">
        <div class="d-flex justify-content-between ">
            <h3 class="header-text">Location</h3>
        </div>

        <div class="row ">
            <div class="col-lg-12 col-md-12 col-sm-12 mt-3 ">
                <div class="border rounded-sm  text-dark pl-3 pr-3">
                    <h5 class="mt-2 text-muted input-text">Building/Warehouse <span class="text-danger">*</span> </h5>

                    @if (@IsEditable)
                    {
                        <InputText @bind-Value="SubMaterialModel.Location.BuildingWarehouse" class="form-control mb-2 form-control-sm"
                                   id="buildingWarehouse" placeholder="Enter Building/Warehouse" name="buildingWarehouse"></InputText>
                        <ValidationMessage For="@(() => SubMaterialModel.Location.BuildingWarehouse)" />
                    }
                    else
                    {
                        <p class="text-muted input-field-text" contentEditable="false" placeholder="">@SubMaterialModel.Location.BuildingWarehouse</p>
                    }

                </div>
            </div>

            <div class="col-lg-6 col-md-12 col-sm-12 mt-3 ">
                <div class="border rounded-sm  text-dark pl-3 pr-3">
                    <h5 class="mt-2 text-muted input-text">Room <span class="text-danger">*</span>  </h5>
                    @if (@IsEditable)
                    {
                        <InputText @bind-Value="SubMaterialModel.Location.Room" class="form-control mb-2 form-control-sm"
                                   id="room" placeholder="Enter Room" name="room"></InputText>
                        <ValidationMessage For="@(() => SubMaterialModel.Location.Room)" />
                    }
                    else
                    {
                        <p class="text-muted input-field-text" contentEditable="false" placeholder="">@SubMaterialModel.Location.Room</p>
                    }

                </div>
            </div>

            <div class="col-lg-6 col-md-12 col-sm-12 mt-3 ">
                <div class="border rounded-sm  text-dark pl-3 pr-3">
                    <h5 class="mt-2 text-muted input-text">Rack <span class="text-danger">*</span>  </h5>
                    @if (@IsEditable)
                    {
                        <InputText @bind-Value="SubMaterialModel.Location.Rack" class="form-control mb-2 form-control-sm"
                                   id="rack" placeholder="Enter Rack" name="rack"></InputText>
                        <ValidationMessage For="@(() => SubMaterialModel.Location.Rack)" />

                    }
                    else
                    {
                        <p class="text-muted input-field-text" contentEditable="false" placeholder="">@SubMaterialModel.Location.Rack</p>
                    }

                </div>
            </div>


        </div>
    </div>
</EditForm>

@code {
    EditForm editForm;
}