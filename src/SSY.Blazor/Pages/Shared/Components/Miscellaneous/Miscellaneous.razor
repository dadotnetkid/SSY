<EditForm Model="MaterialModel" @ref="editForm">
    <DataAnnotationsValidator />
    <div class="border rounded-lg p-4 shadow-sm miscelaneous bg-white">
        <div class="d-flex justify-content-between ">
            <h3 class="header-text">Miscellaneous</h3>
        </div>

        <div class="row ">
            <div class="col-lg-12 col-md-12 col-sm-12 mt-3 ">
                <div class="border rounded-sm text-dark pl-3 pr-3 ">
                    <h5 class="mt-2 text-muted input-text">Care Instructions Type <span class="text-danger">*</span> </h5>
                    @if (IsEditable)
                    {
                        <InputSelect @bind-Value="MaterialModel.CareInstructionTypeId" @oninput="@(e => onChangeCareInstruction(e.Value.ToString()))"
                                     class="form-control mb-2 form-control-sm" id="ci" aria-placeholder="Care Instructions Type">
                            <option selected disabled value="0">Select Care Instructions Type</option>
                            @foreach (var CI in CareInstructionTypeListModel.Result.Items)
                            {
                                <option value="@CI.Id">@CI.Label</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => MaterialModel.CareInstructionTypeId)" />
                    }
                    else
                    {
                        @if (CareInstructionTypeListModel.Result.Items.FirstOrDefault(x => x.Id == MaterialModel.CareInstructionTypeId) != null)
                        {
                            <p class="text-muted input-field-text" contentEditable="false" placeholder=""> @CareInstructionTypeListModel.Result.Items.First(x => x.Id == MaterialModel.CareInstructionTypeId).Label </p>
                        }
                        else
                        {
                            <p class="text-muted input-field-text" contentEditable="false" placeholder="">No Unit Of Measurement Selected</p>
                        }

                    }
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 mt-3 mb-2">
                <div class="border rounded-sm text-dark pl-3 pr-3 care__instructions bg-light">
                    @* this should be display only depending on the CIT selected above *@
                    <h5 class="mt-2 text-muted input-text">Care Instructions </h5>

                    <InputTextArea @bind-Value="MaterialModel.CareInstructionTypeValue" class="form-control mb-2 form-control-sm bg-light" id="cit"
                                   aria-placeholder="Care Instructions" style="height: 108px" disabled>
                    </InputTextArea>

                </div>
            </div>
            @if (IsEditable)
            {
                <div class="spacer__editable"></div>
            }
            else
            {
                <div class="spacer"></div>
            }
        </div>
    </div>
</EditForm>


@code {
    EditForm editForm;
}