            <div class="modal-header transparent">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
            @if(Title == "Design Draft")
            {
                <div class="row">
                        <div class="col-md-6">
                            <div class="m-4">
                                <div class="p-4">
                                    <img src="@ModalImage" class="w-100">
                                </div>
                            </div>
                        
                        </div>
                        <div class="col-md-6">
                            <div class="m-4">
                            <h4 class="mt-3">Sample</h4>
                            <div class="border background-modal p-4 mt-4">
                            
                                        <p class="hexcode-paragraph">sample:</p>
