<EditForm Model="ProductModel">
    <DataAnnotationsValidator />


    <div class="border rounded-lg p-4 shadow-sm bg-white">
        <div class="d-flex justify-content-between " data-target="#overview" data-toggle="collapse">
            <div class="col-md-8">
                <h3 class="header-text">Overview</h3>
            </div>

            <div class="col-md-4">
                <i class="fa fa-light fa-chevron-down pull-right for-dropdown"></i>
            </div>
        </div>

        <div class="row custom__overideWTH collapse show" id="overview">
            <div class="col-lg-3 col-md-12 col-sm-12 mt-3 ">
                <div class="border rounded-sm bg-light text-dark pl-3 pr-3">
                    <h5 class="mt-2 text-muted input-text">PARENT SKU </h5>
                    <p class="text-muted input-field-text" contentEditable="false" placeholder="">
                        @ProductModel.Sku
                    </p>
                </div>
            </div>

            <div class="col-lg-3 col-md-12 col-sm-12 mt-3 ">
                <div class="border rounded-sm bg-light text-dark pl-3 pr-3 productName">
                    <h5 class="mt-2 text-muted input-text">Parent Product Name</h5>
                    <p class="text-muted input-field-text" contentEditable="false" placeholder="">
                        @ProductModel.Name
                    </p>
                </div>
            </div>

            <div class="col-lg-3 col-md-12 col-sm-12 mt-3 ">
                <div class="border rounded-sm bg-light text-dark pl-3 pr-3">
                    <h5 class="mt-2 text-muted input-text">Collection</h5>
                    <p class="text-muted input-field-text address" contentEditable="false" placeholder="">
                        @ProductModel.CollectionName
                    </p>
                </div>
            </div>

            <div class="col-lg-3 col-md-12 col-sm-12 mt-3 ">
                <div class="border rounded-sm bg-light text-dark pl-3 pr-3">
                    <h5 class="mt-2 text-muted input-text">OEM</h5>
                    <p class="text-muted input-field-text address" contentEditable="false" placeholder="">
                        @ProductModel.CollectionFactoryValue
                    </p>
                </div>
            </div>

            <div class="col-lg col-md-12 col-sm-12 mt-3 ">
                <div class="border rounded-sm bg-light text-dark pl-3 pr-3">
                    <h5 class="mt-2 text-muted input-text">Influencer/s </h5>
                    <p class="text-muted input-field-text address" contentEditable="false" placeholder="">
                        @if (ProductModel.InfluencerNames != null)
                        {
                            @ProductModel.InfluencerNames
                        }
                        else
                        {
                            <span> Not Available</span>
                        }
                    </p>
                </div>
            </div>

            <div class="col-lg col-md-12 col-sm-12 mt-3">
                <div class="border rounded-sm bg-light text-dark pl-3 pr-3">
                    <h5 class="mt-2 text-muted input-text">Product Type</h5>
                    <p class="text-muted input-field-text address" contentEditable="false" placeholder="">
                        @if (ProductModel.TypeId != null)
                        {
                            <span> @ProductModel.TypeLabel</span>
                        }
                        else
                        {
                            <span> Not Available</span>
                        }
                    </p>
                </div>
            </div>

            <div class="col-lg col-md-12 col-sm-12 mt-3 ">
                <div class="border rounded-sm bg-white text-dark pl-3 pr-3">
                    <h5 class="mt-2 text-muted input-text">Category</h5>
                    @if (IsEditable)
                    {
                        <InputSelect @bind-Value="ProductModel.CategoryId" class="form-control mb-2 form-control-sm bg-white
                        for-border" placeholder="Select Category">
                            @foreach (var item in LaunchCategoryList.Items)
                            {
                                <option value="@item.Id">@item.Value</option>
                            }
                        </InputSelect>
                    }
                    else
                    {
                        <p class="text-muted input-field-text address" contentEditable="false" placeholder="">
                            @if (ProductModel.CategoryId != null)
                            {
                                @LaunchCategoryList.Items.Find(x => x.Id == ProductModel.CategoryId).Value
                            }
                            else
                            {
                                <span> Not Available</span>
                            }
                        </p>
                    }
                </div>
            </div>

            <div class="col-lg col-md-12 col-sm-12 mt-3 ">
                <div class="border rounded-sm bg-white text-dark pl-3 pr-3">
                    @if (IsEditable && ProductModel.ObjBlockPatternId == null)
                    {
                        <h5 class="mt-2 text-muted input-text">OBJ Block Patterns</h5>
                        <InputSelect @bind-Value="ProductModel.ObjBlockPatternId" class="form-control mb-2 form-control-sm bg-white
                        for-border" placeholder="Select OEM">
                            <option selected disabled value="">Select</option>
                        </InputSelect>
                    }
                    else
                    {
                        <h5 class="mt-2 text-muted input-text">OBJ Block Patterns</h5>
                        <p class="text-muted input-field-text address" contentEditable="false" placeholder="">
                            @if (ProductModel.ObjBlockPatternId != null)
                            {
                                @ProductModel.ObjBlockPatternId
                            }
                            else
                            {
                                <span> Not Available</span>
                            }
                        </p>
                    }
                </div>
            </div>

            <div class="col-lg col-md-12 col-sm-12 mt-3 ">
                <div class="border rounded-sm bg-white text-dark pl-3 pr-3">
                    @if (IsEditable && ProductModel.BaseSizeSpecId == null)
                    {
                        <h5 class="mt-2 text-muted input-text">Base Size Spec</h5>
                        <InputSelect @bind-Value="ProductModel.BaseSizeSpecId" class="form-control mb-2 form-control-sm bg-white
                        for-border" placeholder="Select OEM">
                            <option selected disabled value="">Select</option>
                        </InputSelect>
                    }
                    else
                    {
                        <h5 class="mt-2 text-muted input-text">Base Size Spec</h5>
                        <p class="text-muted input-field-text address" contentEditable="false" placeholder="">
                            @if (ProductModel.BaseSizeSpecId != null)
                            {
                                @ProductModel.BaseSizeSpecId
                            }
                            else
                            {
                                <span> Not Available</span>
                            }
                        </p>
                    }
                </div>
            </div>
            @* <div class="col-lg col-md-12 col-sm-12 mt-3 ">
                    <div class="border rounded-sm bg-white text-dark pl-3 pr-3">
                        @if (IsEditable)
                        {
                            <h5 class="mt-2 text-muted input-text">Workmanship Guide</h5>
                            <InputSelect @bind-Value="ProductModel.WorkmanshipGuideId" class="form-control mb-2 form-control-sm bg-white
                            for-border" placeholder="Workmanship Guide">
                                <option selected disabled value="">Select</option>
                            </InputSelect>
                        }
                        else
                        {
                            <h5 class="mt-2 text-muted input-text">Workmanship Guide</h5>
                            <p class="text-muted input-field-text address" contentEditable="false" placeholder="">
                                @if (ProductModel.WorkmanshipGuideId != null)
                                {
                                    @ProductModel.WorkmanshipGuideId
                                }
                                else
                                {
                                    <span> Not Available</span>
                                }
                            </p>
                        }
                    </div>
                </div> *@
        </div>
    </div>
</EditForm>