                        <div class="design-phase-nav-content @(SelectedComponent == "marketingsamples" ? "active" : "")">
                            <span class="fa-stack fa-2x mx-auto" @onclick="@(() => SetSelectedComponent("marketingsamples"))">
                                <i class="fa fa-circle fa-stack-2x fa-5x" aria-hidden="true"></i>
                                <i class="fa icon-materials-sm d-block fa-stack-1x" aria-hidden="true"></i>
                            </span>
                            <span class="nav-label">Marketing Samples</span>
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="col-lg-4 mt-4 your-design-col">
