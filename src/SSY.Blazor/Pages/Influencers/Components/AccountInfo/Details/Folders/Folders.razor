
<div class="row messaging">
    <div class="col-md-3">
        <div class="input-group w-100 mt-3">
            <span class="input-group-text" id="basic-addon1">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list"
                    viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z">
                    </path>
                </svg>
            </span>
            <input type="text" class="form-control" placeholder="Search">
        </div>
        @* folder display your email tags here*@
        <div class="d-flex justify-content-between " data-target="#overview" data-toggle="collapse">
            <div class="col-md-10">
                <h5 class="title">Folders</h5>
            </div>

            <div class="col-md-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" fill="#a8b792"
                    class="bi bi-plus-lg mt-2 bg-green" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
                </svg>
            </div>
        </div>
        <a @onclick="@(() => EmailTag("Design- ACTIVEWEAR"))">
        <p><span class="email-tags"></span> Design- ACTIVEWEAR <span class="badge hex-color notif-folder">4</span><svg
                xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                <path
                    d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
            </svg></p>
            </a>
        <a @onclick="@(() => EmailTag("Design- KNITWEAR"))">
        <p><span class="email-tags"></span> Design- KNITWEAR <span class="badge hex-color notif-folder">4</span><svg
                xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                <path
                    d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
            </svg></p>
        </a>
        <p><span class="email-tags"></span> Design- ACTIVEWEAR <span class="badge hex-color notif-folder">4</span><svg
                xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                <path
                    d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
            </svg></p>
        <p><span class="email-tags"></span> Design- ACTIVEWEAR <span class="badge hex-color notif-folder">4</span><svg
                xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                <path
                    d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
            </svg></p>
        @* end folder display your email tags here*@
    </div>
    <div class="col-md-3">
        <div class="row">
            <div class="col-6">
                <p class="mt-3"><span class="email-tags"></span> Inspirations</p>
            </div>
             <div class="col-6">
                <button class="btn btn-sm btn-color-hex mt-2">New Message</button>
            </div>
        </div>
        @* Logic for displaying temporariry needs to be in model not string ("Design- ACTIVEWEAR")*@
        @if(@EmailTags == "Design- ACTIVEWEAR")
        {   
            <div class="box-message" id="selected "  @onclick="@(() => Inbox("hello- KNITWEAR"))">
                <h5> hello ACTIVEWEAR</h5>
                <p><span class="time-date">Wed, Aug 23, 2023 </span></p>
            </div>
             <div class="box-message" id="selected"  @onclick="@(() => Inbox("hellos- ACTIVEWEAR"))">
                <h5> hellos ACTIVEWEAR</h5>
                <p><span class="time-date">Wed, Aug 23, 2023 </span></p>
            </div>
             <div class="box-message" id="selected"  @onclick="@(() => Inbox("hello- ACTIVEWEAR"))">
                <h5> hello ACTIVEWEAR</h5>
                <p><span class="time-date">Wed, Aug 23, 2023 </span></p>
            </div>
            
            
        }
        else if( @EmailTags == "Design- KNITWEAR")
        {
            <p> hello knitwear</p>
        }
    </div>
    <div class="col-md-6">
        @if(SelectedMessage == "hello- KNITWEAR")
        {
            <p>hello</p>

        }
        else if(SelectedMessage == "hellos- ACTIVEWEAR")
        {
            <p>hellos</p>
            
        }
        else if(SelectedMessage == "hello- ACTIVEWEAR")
        {
            <p>ACTIVEWEAR</p>
        }
    </div>
</div>
